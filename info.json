
{

    "name"    : "Viewer",
    "version" : "1.0",
    "stage"   : "beta",
    "api"     : "a100d2",

    "language" : {

        "default" : "en-en",
        "list"    : [ "en-en" ]

    },

    "device" : {

        "desktop" : {

            "primary" : "main",
            "service" : [],
            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {

                    "template" : "main.html",

                    "animation" : false,
                    "resizable" : true,
                    "maxizable" : true,

                    "width"  : {

                        "default" : 375,
                        "min"     : 375,
                        "max"     : 0

                    },

                    "height" : {

                        "default" : 677,
                        "min"     : 677,
                        "max"     : 0

                    },

                    "css"    : ["style.css"],
                    "script" : ["script.js"],
                    "start"  : ["start.js"]

                }

            }

        },

        "mobile" : {

            "primary" : "main",
            "service" : [],
            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {

                    "template" : "mobileMain.html",
                    "css"    : ["mobile/style.css"],
                    "script" : ["mobile/script.js"],
                    "start"  : []

                }

            }

        }

    },

    "permission" : {

        "fs" : {

            "read" : true

        }

    }

}
